{
  "name": "background-finder",
  "version": "1.0.0",
  "description": "",
  "author": "Aditya Agarwal <adityaa803@gmail.com> (adi.surge.sh)",
  "license": "ISC",
  "repository": "github:probot/background-check",
  "scripts": {
    "dev": "nodemon --exec \"npm start\"",
    "start": "probot run ./index.js",
    "probot": "probot",
    "simulate": "sh ./scripts/simulate.sh",
    "simulate:watch": "sh ./scripts/simulate-watch.sh",
    "sandbox": "probot simulate sandbox test/fixtures/sandbox.json ./test/sandboxes/sandbox-runner.js",
    "lint": "standard --verbose --fix | snazzy",
    "test": "jest",
    "test:watch": "jest --watch",
    "coverage": "jest --coverage",
    "docs": "documentation build lib/** -f html -o docs",
    "docs:serve": "documentation serve --watch lib/**",
    "deploy": "git push heroku master",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "{lib,test}/**/*.js": [
      "npm run lint",
      "npm run test -- --bail --findRelatedTests",
      "git add"
    ]
  },
  "dependencies": {
    "probot": "6.2.1",
    "superagent": "^3.8.3"
  },
  "devDependencies": {
    "documentation": "^7.1.0",
    "dotenv": "^5.0.1",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "lint-staged": "^7.1.2",
    "nock": "^9.2.6",
    "nodemon": "^1.17.2",
    "smee-client": "^1.0.1",
    "snazzy": "^7.1.1",
    "standard": "^10.0.3"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "standard": {
    "ignore": [
      "docs",
      "public",
      "scripts",
      "assets"
    ],
    "env": [
      "jest"
    ]
  },
  "jest": {
    "verbose": true
  }
}
